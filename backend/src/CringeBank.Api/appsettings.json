{
  "ConnectionStrings": {
    "Sql": ""
  },
  "Jwt": {
    "Issuer": "cringebank",
    "Audience": "cringebank.app",
    "AccessMinutes": 15,
    "RefreshDays": 30,
    "Key": ""
  },
  "Authentication": {
    "Firebase": {
      "ProjectId": "",
      "RequireEmailVerified": true,
      "CheckRevoked": true,
      "MinimumClaimsVersion": 1,
      "ServiceAccountKeyPath": "",
      "ServiceAccountJson": "",
      "EmulatorHost": "",
      "TokenClockSkewMinutes": 2
    },
    "AppCheck": {
      "Enabled": false,
      "ProjectNumber": "",
      "AppId": "",
      "CacheTtlSeconds": 300
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Swagger": {
    "Enabled": false
  },
  "Telemetry": {
    "Seq": {
      "Url": "",
      "ApiKey": "",
      "MinimumLevel": "Information"
    },
    "Tracing": {
      "Enabled": true,
      "Exporter": "console",
      "ServiceNamespace": "Backend",
      "ServiceVersion": "",
      "ServiceInstanceId": "",
      "OtlpEndpoint": "",
      "OtlpHeaders": []
    }
  },
  "Rbac": {
    "RolesCacheSeconds": 30,
    "Policies": [
      {
        "Resource": "session",
        "Action": "bootstrap",
        "Roles": [
          "user",
          "admin",
          "superadmin"
        ],
        "Description": "Allow signed-in users to bootstrap their session context."
      },
      {
        "Resource": "feed",
        "Action": "read",
        "Roles": [
          "user",
          "admin",
          "superadmin"
        ],
        "Description": "Allow authenticated users to query feed timelines."
      },
      {
        "Resource": "chat",
        "Action": "write",
        "Roles": [
          "user",
          "admin",
          "superadmin"
        ],
        "Description": "Allow authenticated users to use chat features."
      },
      {
        "Resource": "wallet",
        "Action": "read",
        "Roles": [
          "user",
          "admin",
          "superadmin"
        ],
        "Description": "Allow authenticated users to view wallet balances and transactions."
      },
      {
        "Resource": "wallet",
        "Action": "write",
        "Roles": [
          "user",
          "admin",
          "superadmin"
        ],
        "Description": "Allow authenticated users to release or refund escrow."
      },
      {
        "Resource": "admin",
        "Action": "read",
        "Roles": [
          "admin",
          "superadmin"
        ],
        "Description": "Allow admin operators to list and filter users."
      },
      {
        "Resource": "admin",
        "Action": "write",
        "Roles": [
          "admin",
          "superadmin"
        ],
        "Description": "Allow admin operators to manage user roles and statuses."
      }
    ],
    "TwoManApprovalActions": []
  },
  "Storage": {
    "ProfileMedia": {
      "ConnectionString": "",
      "ContainerName": "cringebank-profile-media",
      "AvatarPrefix": "avatars",
      "BannerPrefix": "banners",
      "UploadExpiryMinutes": 15
    }
  },
  "AllowedHosts": "*"
}
